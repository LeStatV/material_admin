{#
/**
 * @file
 * Theme override for an 'input' #type form element.
 *
 * Available variables:
 * - attributes: A list of HTML attributes for the input element.
 * - children: Optional additional rendered elements.
 *
 * @see template_preprocess_input()
 */
#}
{%
  set classes = [
    'btn btn-default'
  ]
%}

{% set clickProcessing = ['this.form.submit(); this.disabled=true; this.value="Submitting...";'
 ]%}

<input{{ attributes.addClass(classes).setAttribute('onClick',clickProcessing) }} />{{ children }}