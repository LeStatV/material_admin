{#
/**
 * @file
 * Theme override for an 'input' #type form element.
 *
 * Available variables:
 * - attributes: A list of HTML attributes for the input element.
 * - children: Optional additional rendered elements.
 *
 * @see template_preprocess_input()
 */
#}
{%
  set remove_classes = [
    'button',
    ]
%}

{%
  set classes = [
    'waves-button-input',
    ]
%}

{% if attributes.hasClass('visually-hidden') or  attributes.hasClass('js-hide') or attributes.hasClass('add-display') %}
  <input{{ attributes.addClass(classes)}} />{{ children }}
 {% else %}
  <i class="waves-effect waves-light waves-input-wrapper button btn">
  <input{{ attributes.removeClass(remove_classes).addClass(classes) }} />{{ children }}
  </i>
{% endif %}